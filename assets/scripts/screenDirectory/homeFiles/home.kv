<Home>:
    Vert:
        orientation: 'vertical'

        Image:
            source: "assets/images/home/vamp.png"

        Vert:
            Vert:
                Title:
                    text: "Welcome to"
                    color: 1, 1, 0, 1
                
                Title:
                    text: "BTerror"
                    color: 1, 0, 0, 1
            
            BoxButtons:
                Button:
                    text: "Credits"
                    on_press: root.go_to_credits()
                Button:
                    text: 'Click'
                    on_press: root.go_to_terror()

<BoxButtons@BoxLayout>:
    padding: root.width / 4, root.height * 0.35
    spacing: 10

<Vert@BoxLayout>:
    orientation: "vertical"

<Button@Button>:
    font_size: "18sp"